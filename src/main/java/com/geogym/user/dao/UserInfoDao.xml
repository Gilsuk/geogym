<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.geogym.user.dao.UserInfoDao">

	<select id="selectUserByUserno"
		parameterType="int"
		resultType="com.geogym.user.dto.User">
		SELECT * FROM user
		WHERE user_no = #{user_no}
	</select>
	
	<select id="selectCntTrainerByUserno" parameterType="int" resultType="int">
		SELECT count(*) FROM user
		INNER JOIN trainer USING (user_no)
	</select>

</mapper>